<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FastReading.Trainings.RunningWordsPage">

    <StackLayout Padding="20">
        <Label x:Name="WordLabel" FontSize="36" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
        <Entry x:Name="AnswerEntry" Placeholder="Введите слово" FontSize="24" />
        <Button Text="Ответить" FontSize="18" Clicked="OnAnswerEntered"/>
    </StackLayout>

</ContentPage>
